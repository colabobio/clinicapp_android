<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorAppBackground"
                                                   tools:context=".ui.studydata.survey.SurveyActivity">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtHeader"
            style="@style/txtHeaderTitle"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:text="@string/study_survey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

    />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tableRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHeader" app:layout_constraintVertical_bias="0.0">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/card_background"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_20"
                android:paddingEnd="@dimen/padding_20"
                android:paddingBottom="@dimen/padding_20"
                app:layout_constraintBottom_toTopOf="@+id/tableRow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        >

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fill_patientTxt"
                    style="@style/txtLabelHeader_noMargin"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_2"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/text_size_13"
            />
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fill_formDetailsTxt"
                    style="@style/txtLabelHeader_noMargin"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/text_size_18"
            />
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fill_quesText"
                    style="@style/txtLabelHeader_noMargin"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:fontFamily="sans-serif"
                    android:text="@string/question"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_15"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fillData_titleTxt"
                    style="@style/txtTitle"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:fontFamily="sans-serif"
                    android:maxLines="4"
                    android:textSize="@dimen/text_size_15"

            />
            <LinearLayout
                    android:id="@+id/fill_binLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >
            </LinearLayout>


            <EditText
                    android:id="@+id/fillData_textInputEd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:fontFamily="sans-serif"
                    android:gravity="start|top"
                    android:hint="@string/hint"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="gone"
            />

            <LinearLayout android:id="@+id/fill_dateLayout" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical" android:visibility="gone"
            >

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fill_dateInputTxt"
                        style="@style/txtTitle"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/padding_20"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_15"

                />
                <ImageView android:id="@+id/fill_setDateView" android:layout_width="wrap_content"
                           android:layout_height="wrap_content" android:layout_marginStart="@dimen/padding_20"
                           android:contentDescription="@string/todo"

                           android:src="@drawable/ic_date"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/fill_catInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
     <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAppBackground"
            app:layout_constraintStart_toStartOf="parent">

        <ImageButton
                android:id="@+id/btn_previous"
                style="@style/survey_bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_prev_arrow"
                android:text="@string/previous"
                android:visibility="gone"
                android:contentDescription="@string/todo"/>

        <Button
                android:id="@+id/btn_skip"
                style="@style/survey_bottom"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dimen_2"
                android:layout_weight="1"
                android:text="@string/unknown"
                android:visibility="gone"
               />

        <ImageButton
                android:id="@+id/btn_next"
                style="@style/survey_bottom"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dimen_2"
                android:layout_weight="1"
                android:src="@drawable/ic_next_arrow"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"/>
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>