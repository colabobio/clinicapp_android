<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                 >


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtHeader"
            style="@style/txtHeaderTitle"
            android:layout_margin="@dimen/dimen_15"
            android:text="@string/about_study_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:background="@color/colorAppBackground"
            app:layout_constraintBottom_toTopOf="@+id/tableRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHeader"
           >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingEnd="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
        >

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtLabelHeader"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/title" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about_study_form_details_title"
                    style="@style/txtTitle"
                    android:maxLines="4"
                    />

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/txtLabelHeader"

                    android:text="@string/description" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/study_form_details_desc"
                    style="@style/txt_formDetailsDesc"
                    android:textSize="@dimen/text_size_15"
                    android:layout_marginBottom="@dimen/dimen_10"

            />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_confirm"
            style="@style/bottomBtn"
            android:layout_width="209dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_use_model"
            style="@style/bottomBtn"
            android:layout_width="213dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </TableRow>
    <ProgressBar
            android:id="@+id/aboutProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

   </androidx.constraintlayout.widget.ConstraintLayout>