<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_15"
            android:weightSum="1">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPatientId"
                    style="@style/txtTitle"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:maxLines="1"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStudyDataCreatedOn"
                    style="@style/txt_cardCreator"
                    android:layout_marginBottom="@dimen/dimen_5"
                    />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStudyDataLastModified"
                    style="@style/txt_cardCreator"
                    android:layout_marginBottom="@dimen/dimen_5" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPatientType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_edit"
                    android:textSize="@dimen/text_size_14" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSyncStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_cloud_reload_sync" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>