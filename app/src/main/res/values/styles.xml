<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/colorAppBackground</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loginBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:minHeight">42dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="bottomBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/bottom_button_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="survey_bottom" parent="bottomBtn">
        <item name="android:minHeight">52dp</item>

    </style>


    <style name="txtTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="txtHeaderTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">@dimen/dimen_15</item>
    </style>

    <style name="txtVariableHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">@dimen/dimen_15</item>
    </style>

    <style name="txtLabelHeader">
    <item name="android:textColor">@color/black</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">left</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:layout_marginTop">@dimen/dimen_15</item>
    </style>

    <style name="txtLabelHeader_noMargin">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="edProfile">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="txt_cardDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="txt_formDetailsDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="txt_cardCreator">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="txtVariableInfo" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/mid_gray</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
        <item name="android:minWidth">250dip</item>
    </style>

</resources>
